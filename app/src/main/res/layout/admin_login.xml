<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="600dp"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="600dp"
        android:layout_marginRight="600dp"
        android:layout_marginBottom="100dp"
        android:text="Administrator Login"
        android:textColor="#673AB7"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/AdminLoginEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="600dp"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="600dp"
        android:layout_marginRight="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[11]" />

    <EditText
        android:id="@+id/AdminLoginEmail"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginStart="600dp"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="600dp"
        android:layout_marginRight="600dp"
        android:ems="10"
        android:textColorHint="#66673AB7"
        android:inputType="textPersonName"
        android:hint="UserName"
        android:textColor="#673AB7"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/AdminLoginPassword"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginStart="600dp"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="50dp"
        android:textColor="#673AB7"

        android:layout_marginEnd="600dp"
        android:layout_marginRight="600dp"
        android:layout_marginBottom="269dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:textColorHint="#66673AB7"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AdminLoginEmail" />

    <Button
        android:id="@+id/AdminLoginButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="540dp"
        android:layout_marginLeft="540dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="540dp"
        android:layout_marginRight="540dp"
        android:layout_marginBottom="144dp"
        android:background="#673AB7"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:onClick="AdminLoginButtonPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AdminLoginPassword" />

</android.support.constraint.ConstraintLayout>